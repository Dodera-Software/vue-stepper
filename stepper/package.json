{
  "name": "@doderasoftware/vue-stepper",
  "version": "1.0.1",
  "description": "A headless, accessible, and fully customizable multi-step stepper component for Vue 3. Build complex forms, wizards, and onboarding flows with ease. Features TypeScript support, responsive mobile design, step validation, optional steps, progress tracking, and a powerful :ui prop system for complete style control.",
  "author": {
    "name": "Dodera Software SRL",
    "url": "https://doderasoft.com",
    "email": "contact@doderasoft.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Dodera-Software/vue-stepper.git"
  },
  "bugs": {
    "url": "https://github.com/Dodera-Software/vue-stepper/issues"
  },
  "homepage": "https://vue-stepper.doderasoft.com",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/Dodera-Software"
  },
  "keywords": [
    "vue",
    "vue3",
    "vue-stepper",
    "stepper",
    "multi-step",
    "multistep",
    "wizard",
    "form",
    "form-wizard",
    "step-by-step",
    "onboarding",
    "checkout",
    "flow",
    "workflow",
    "progress",
    "typescript",
    "ts",
    "component",
    "headless",
    "accessible",
    "a11y",
    "responsive",
    "mobile",
    "customizable",
    "tailwind",
    "composition-api",
    "vue-component",
    "ui-component"
  ],
  "type": "module",
  "main": "./dist/vue-stepper.umd.cjs",
  "module": "./dist/vue-stepper.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/vue-stepper.js",
      "require": "./dist/vue-stepper.umd.cjs"
    },
    "./dist/style.css": "./dist/vue-stepper.css"
  },
  "files": [
    "dist"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "build": "vite build && vue-tsc --declaration --emitDeclarationOnly --outDir dist",
    "build:types": "vue-tsc --declaration --emitDeclarationOnly --outDir dist",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "vue": "^3.3.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@vitejs/plugin-vue": "^5.2.3",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "vite-plugin-dts": "^4.5.0",
    "vue": "^3.5.13",
    "vue-tsc": "^2.2.10"
  }
}